
<div class="container">
    <div class="section">

<!-- active order section-->
        <div class="row">
          <div class="col s12 left">
          <h4 class="welcome-header center">Welcome back <%= @current_merchant.first_name %> </h4>
            <div><h5 class="results-header">Active orders</h5>
              <div class="sortby-dropdown">
                <div class="input-field">
                    <select class="js-sortby-dropdown" name="searchFilter">
                      <option value="1">Due Date</option>
                      <option value="2">Name</option>
                    </select>
                    <label>Order by</label>
                </div>
              </div>  
          <h3><i class="mdi-content-send brown-text"></i></h3>
                    
                    
                            <% @orders.each do |order| %>
                            <div class="row">
                              <div class="col s8 list-orderCard">
                              <span class="order-name">Name: <%= order.client.first_name %></span>
                              <span class="due-date">Due: 12/12/2016</span>
                              </div>
                            
                              <div class="col s4">
                              <button class="btn waves-effect waves-light completeOrder-btnStyle" type="submit" name="action">Complete Order
                              </button>
                              </div>
                            </div>
                          <% end %>
            </div>
        </div>
    </div> <!-- active order section end -->



        <!-- order history section-->
        <div class="row">
          <div class="col s12 left">
            <div><h5 class="results-header">Completed Order History</h5>
              <div class="sortby-dropdown">
                <div class="input-field">
                    <select class="js-sortby-dropdown" name="searchFilter">
                      <option value="1">Date</option>
                    </select>
                    <label>Order by</label>
                </div>
              </div>
            </div>
        </div>
    </div> <!-- order history section end -->
    
  </div>
</div>






